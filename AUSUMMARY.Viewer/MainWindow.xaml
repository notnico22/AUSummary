<Window x:Class="AUSUMMARY.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AUSUMMARY" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="BgDark" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="BgCard" Color="#151515"/>
        <SolidColorBrush x:Key="BgPanel" Color="#1C1C1C"/>
        <SolidColorBrush x:Key="BgHover" Color="#252525"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#707070"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0EA5E9"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8B5CF6"/>

        <!-- Sleek Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgPanel}"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BgHover}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button -->
        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Title Bar Button -->
        <Style x:Key="TitleBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        </Style>
    </Window.Resources>

    <!-- Main Window Border with Glow -->
    <Border BorderBrush="#1A1A1A" BorderThickness="1" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="32"/>
            </Grid.RowDefinitions>

            <!-- Sleek Title Bar with Gradient -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1C1C1C" Offset="0"/>
                        <GradientStop Color="#151515" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid Margin="25,0">
                    <!-- Logo & Title -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource AccentBlue}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                            <TextBlock Text="ðŸŽ®" FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="AUSUMMARY" FontSize="18" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Among Us Statistics" FontSize="10" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="âˆ’" Width="40" Height="40" Style="{StaticResource TitleBtn}" 
                                Click="MinimizeButton_Click" FontSize="18"/>
                        <Button Content="â–¡" Width="40" Height="40" Style="{StaticResource TitleBtn}" 
                                Click="MaximizeButton_Click" FontSize="14" Margin="4,0"/>
                        <Button Content="âœ•" Width="40" Height="40" Style="{StaticResource TitleBtn}" 
                                Click="CloseButton_Click" FontSize="14" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Background="{StaticResource BgDark}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Stylish Sidebar -->
                <Border Grid.Column="0" Background="{StaticResource BgPanel}" 
                        BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- Navigation Section -->
                            <TextBlock Text="NAVIGATION" FontSize="10" FontWeight="Bold" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,0,0,12" Opacity="0.7"/>
                            
                            <Button Click="ShowAllGames_Click" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="All Games" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Click="ShowMostRecent_Click" Margin="0,0,0,8" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸŽ¯" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="Most Recent" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Click="ShowPlayerSearch_Click" Margin="0,0,0,20" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" FontSize="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="Player Search" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Filters Section -->
                            <TextBlock Text="FILTERS" FontSize="10" FontWeight="Bold" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,0,0,12" Opacity="0.7"/>
                            
                            <TextBlock Text="Map" Foreground="{StaticResource TextSecondary}" 
                                       FontSize="11" Margin="0,0,0,6" FontWeight="Medium"/>
                            <ComboBox x:Name="CbMapFilter" SelectionChanged="Filter_Changed" Margin="0,0,0,12"
                                      Background="{StaticResource BgCard}" Foreground="{StaticResource TextPrimary}"
                                      BorderBrush="{StaticResource BorderSubtle}" Height="36">
                                <ComboBoxItem Content="All Maps" IsSelected="True"/>
                                <ComboBoxItem Content="The Skeld"/>
                                <ComboBoxItem Content="MIRA HQ"/>
                                <ComboBoxItem Content="Polus"/>
                            </ComboBox>

                            <TextBlock Text="Winner" Foreground="{StaticResource TextSecondary}" 
                                       FontSize="11" Margin="0,0,0,6" FontWeight="Medium"/>
                            <ComboBox x:Name="CbWinnerFilter" SelectionChanged="Filter_Changed" Margin="0,0,0,12"
                                      Background="{StaticResource BgCard}" Foreground="{StaticResource TextPrimary}"
                                      BorderBrush="{StaticResource BorderSubtle}" Height="36">
                                <ComboBoxItem Content="All Winners" IsSelected="True"/>
                                <ComboBoxItem Content="Crewmate"/>
                                <ComboBoxItem Content="Impostor"/>
                            </ComboBox>

                            <Button Content="Clear Filters" Click="ClearFilters_Click" 
                                    Margin="0,0,0,20" HorizontalAlignment="Stretch"/>

                            <!-- Stats Cards -->
                            <TextBlock Text="STATISTICS" FontSize="10" FontWeight="Bold" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,0,0,12" Opacity="0.7"/>
                            
                            <!-- Total Games Card -->
                            <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="16" Margin="0,0,0,10">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="TOTAL GAMES" FontSize="9" FontWeight="Bold" 
                                               Foreground="{StaticResource TextMuted}" Margin="0,0,0,6"/>
                                    <TextBlock x:Name="TxtTotalGames" Text="0" FontSize="32" FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Win Rates Grid -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Crew Win Rate -->
                                <Border Grid.Column="0" Background="{StaticResource BgCard}" CornerRadius="10" Padding="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="CREW" FontSize="8" FontWeight="Bold" 
                                                   Foreground="{StaticResource TextMuted}" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtCrewWinRate" Text="0%" FontSize="20" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Impostor Win Rate -->
                                <Border Grid.Column="2" Background="{StaticResource BgCard}" CornerRadius="10" Padding="12">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="IMPOSTOR" FontSize="8" FontWeight="Bold" 
                                                   Foreground="{StaticResource TextMuted}" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="TxtImpWinRate" Text="0%" FontSize="20" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Tools Section -->
                            <TextBlock Text="TOOLS" FontSize="10" FontWeight="Bold" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,0,0,12" Opacity="0.7"/>
                            
                            <Button Content="ðŸ“ Open Folder" Click="OpenFolder_Click" 
                                    Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                            <Button Content="ðŸ”„ Refresh Data" Click="RefreshData_Click" 
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Main Content Panel -->
                <Grid Grid.Column="1" Margin="20">
                    
                    <!-- All Games View -->
                    <ScrollViewer x:Name="AllGamesView" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                        <StackPanel>
                            <!-- Header -->
                            <TextBlock Text="All Games" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                            <!-- Games Grid -->
                            <ItemsControl x:Name="GamesGrid">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate><WrapPanel/></ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BgCard}" 
                                                BorderBrush="{StaticResource BorderSubtle}" BorderThickness="1"
                                                CornerRadius="12" Width="320" Height="140" Margin="0,0,16,16" Padding="16"
                                                Cursor="Hand" MouseLeftButtonUp="GameCard_Click">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                            </Border.Effect>
                                            
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header -->
                                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                                    <TextBlock Text="{Binding Metadata.MapName, FallbackValue='Unknown'}" 
                                                               FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                                    <Border Background="{StaticResource AccentGreen}" CornerRadius="6" 
                                                            Padding="8,4" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding Winner.WinningTeam, FallbackValue='?'}" 
                                                                   FontSize="10" FontWeight="Bold" Foreground="White"/>
                                                    </Border>
                                                </Grid>

                                                <!-- Stats Icons -->
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Border Background="{StaticResource BgPanel}" CornerRadius="6" Padding="8,4" Margin="0,0,8,0">
                                                        <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="11">
                                                            <Run Text="â±ï¸" Foreground="{StaticResource AccentYellow}"/>
                                                            <Run Text="{Binding Metadata.GameDuration, StringFormat='{}{0:mm}:{0:ss}', FallbackValue='0:00'}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="{StaticResource BgPanel}" CornerRadius="6" Padding="8,4" Margin="0,0,8,0">
                                                        <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="11">
                                                            <Run Text="ðŸ‘¥" Foreground="{StaticResource AccentBlue}"/>
                                                            <Run Text="{Binding Metadata.PlayerCount, FallbackValue='0'}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="{StaticResource BgPanel}" CornerRadius="6" Padding="8,4">
                                                        <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="11">
                                                            <Run Text="ðŸ”ª" Foreground="{StaticResource AccentRed}"/>
                                                            <Run Text="{Binding Statistics.TotalKills, FallbackValue='0'}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Footer -->
                                                <TextBlock Grid.Row="2" Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, HH:mm}', FallbackValue='Unknown'}" 
                                                           FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <Border x:Name="NoGamesPanel" Visibility="Collapsed" 
                                    Background="{StaticResource BgCard}" CornerRadius="12" 
                                    Padding="60" HorizontalAlignment="Center" Margin="0,60,0,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸŽ®" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                                    <TextBlock Text="No games found" FontSize="20" FontWeight="Bold" 
                                               Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center" Margin="0,16,0,8"/>
                                    <TextBlock Text="Play some Among Us to see your stats!" FontSize="13" 
                                               Foreground="{StaticResource TextMuted}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Game Details View -->
                    <ScrollViewer x:Name="GameDetailsView" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <Button Content="â† Back to Games" Click="BackToGames_Click" 
                                    HorizontalAlignment="Left" Margin="0,0,0,20"/>

                            <!-- Game Header Card -->
                            <Border Background="{StaticResource BgCard}" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="TxtDetailMapName" Text="The Skeld" FontSize="28" 
                                                   FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock x:Name="TxtDetailTimestamp" Text="Jan 19, 2026" FontSize="12" 
                                                   Foreground="{StaticResource TextMuted}" Margin="0,4,0,16"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{StaticResource AccentGreen}" CornerRadius="8" Padding="12,6">
                                                <TextBlock x:Name="TxtDetailWinner" Text="Crewmate" FontSize="13" 
                                                           FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                            <TextBlock x:Name="TxtDetailCondition" Text="Completed All Tasks" FontSize="13" 
                                                       Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Stats Cards Grid -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource BgCard}" CornerRadius="12" Padding="20" Margin="0,0,8,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="â±ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="TxtDetailDuration" Text="0:00" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentYellow}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Duration" FontSize="10" Foreground="{StaticResource TextMuted}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="{StaticResource BgCard}" CornerRadius="12" Padding="20" Margin="8,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="ðŸ‘¥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="TxtDetailPlayers" Text="0" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBlue}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Players" FontSize="10" Foreground="{StaticResource TextMuted}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="{StaticResource BgCard}" CornerRadius="12" Padding="20" Margin="8,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="ðŸ”ª" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="TxtDetailKills" Text="0" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentRed}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Kills" FontSize="10" Foreground="{StaticResource TextMuted}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="3" Background="{StaticResource BgCard}" CornerRadius="12" Padding="20" Margin="8,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel>
                                        <TextBlock Text="âœ…" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock x:Name="TxtDetailTasks" Text="0%" FontSize="24" FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentGreen}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Tasks" FontSize="10" Foreground="{StaticResource TextMuted}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Players Section -->
                            <TextBlock Text="Players" FontSize="20" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}" Margin="0,0,0,16"/>

                            <ItemsControl x:Name="PlayersListDetail">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BgCard}" CornerRadius="10" Padding="16" Margin="0,0,0,8"
                                                Cursor="Hand" MouseLeftButtonUp="PlayerCard_Click">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="0" FontSize="20" Margin="0,0,16,0" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="â“"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsAlive}" Value="True">
                                                                    <Setter Property="Text" Value="âœ…"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsAlive}" Value="False">
                                                                    <Setter Property="Text" Value="ðŸ’€"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <!-- Player Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding PlayerName, FallbackValue='Unknown'}" 
                                                               FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0">
                                                        <Run Text="{Binding Role, FallbackValue='?'}" FontWeight="Medium"/>
                                                        <Run Text=" â€¢ "/>
                                                        <Run Text="{Binding Team, FallbackValue='?'}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Stats -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Border Background="{StaticResource BgPanel}" CornerRadius="6" Padding="8,4" Margin="0,0,8,0">
                                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondary}">
                                                            <Run Text="ðŸ”ª " Foreground="{StaticResource AccentRed}"/>
                                                            <Run Text="{Binding KillCount, FallbackValue='0'}"/>
                                                        </TextBlock>
                                                    </Border>
                                                    <Border Background="{StaticResource BgPanel}" CornerRadius="6" Padding="8,4">
                                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondary}">
                                                            <Run Text="âœ… " Foreground="{StaticResource AccentGreen}"/>
                                                            <Run Text="{Binding TasksCompleted, FallbackValue='0'}"/>
                                                            <Run Text="/"/>
                                                            <Run Text="{Binding TotalTasks, FallbackValue='0'}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Player Search View -->
                    <ScrollViewer x:Name="PlayerSearchView" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Player Search" FontSize="28" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>

                            <!-- Search Bar -->
                            <Border Background="{StaticResource BgCard}" CornerRadius="12" Padding="16" Margin="0,0,0,24">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="TxtPlayerSearch" Grid.Column="0" Height="44" 
                                             VerticalContentAlignment="Center" Margin="0,0,12,0" FontSize="14"
                                             Background="{StaticResource BgPanel}" Foreground="{StaticResource TextPrimary}" 
                                             BorderBrush="{StaticResource BorderSubtle}"/>
                                    <Button Grid.Column="1" Content="ðŸ” Search" Click="SearchPlayer_Click" 
                                            Height="44" Width="120" Style="{StaticResource AccentBtn}"/>
                                </Grid>
                            </Border>

                            <!-- Results Panel -->
                            <Border x:Name="PlayerStatsPanel" Background="{StaticResource BgCard}" 
                                    CornerRadius="12" Padding="24" Visibility="Collapsed">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock x:Name="TxtSearchPlayerName" Text="Player Name" FontSize="24" 
                                               FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="{StaticResource BgPanel}" CornerRadius="10" Padding="20" Margin="0,0,8,0">
                                            <StackPanel>
