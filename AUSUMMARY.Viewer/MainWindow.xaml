<Window x:Class="AUSUMMARY.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AUSUMMARY - Game Statistics Viewer" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Modern Flat Colors -->
        <SolidColorBrush x:Key="BgPrimary" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgSecondary" Color="#252526"/>
        <SolidColorBrush x:Key="BgTertiary" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BgHover" Color="#3E3E42"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#858585"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#4EC9B0"/>
        <SolidColorBrush x:Key="AccentRed" Color="#F48771"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#DCDCAA"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#C586C0"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BgHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Game Card Style -->
        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Panel Style -->
        <Style x:Key="Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="AUSUMMARY" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBlue}" VerticalAlignment="Center"/>
                    <TextBlock Text=" Game Statistics Viewer" FontSize="14" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="ðŸ“ Open Folder" Style="{StaticResource SmallButton}" Click="OpenFolder_Click" Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸ Clear All Data" Style="{StaticResource SmallButton}" Click="ClearData_Click" Margin="0,0,10,0"/>
                    <Button Content="ðŸ“¤ Export Stats" Style="{StaticResource SmallButton}" Click="ExportStats_Click" Margin="0,0,20,0"/>
                    <Button Content="âœ•" 
                            Background="Transparent" BorderThickness="0" Foreground="{StaticResource AccentRed}"
                            FontSize="20" FontWeight="Bold" Cursor="Hand"
                            Click="CloseButton_Click" Padding="10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDEBAR -->
            <Border Grid.Column="0" Style="{StaticResource Panel}" Padding="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Quick Actions -->
                        <TextBlock Text="QUICK ACTIONS" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                        <Button Content="ðŸ“‹ Most Recent Game" 
                                Style="{StaticResource ModernButton}"
                                Click="ViewMostRecent_Click" 
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"/>

                        <Button Content="ðŸ—‚ï¸ Browse All Games" 
                                Style="{StaticResource ModernButton}"
                                Click="ViewAllGames_Click" 
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"/>

                        <Button Content="ðŸ“ˆ View Leaderboard" 
                                Style="{StaticResource ModernButton}"
                                Click="ViewLeaderboard_Click" 
                                Margin="0,0,0,20"
                                HorizontalAlignment="Stretch"/>

                        <Separator Background="{StaticResource BorderColor}" Margin="0,0,0,20"/>

                        <!-- Sort Options -->
                        <TextBlock Text="SORT BY" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                        <ComboBox x:Name="SortFilter" Margin="0,0,0,20" SelectionChanged="Filter_Changed">
                            <ComboBoxItem Content="Newest First" IsSelected="True"/>
                            <ComboBoxItem Content="Oldest First"/>
                            <ComboBoxItem Content="Longest Duration"/>
                            <ComboBoxItem Content="Shortest Duration"/>
                        </ComboBox>

                        <Separator Background="{StaticResource BorderColor}" Margin="0,0,0,20"/>

                        <!-- Filter Section -->
                        <TextBlock Text="FILTERS" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                        <TextBlock Text="Map:" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="MapFilter" Margin="0,0,0,10" SelectionChanged="Filter_Changed">
                            <ComboBoxItem Content="All Maps" IsSelected="True"/>
                            <ComboBoxItem Content="The Skeld"/>
                            <ComboBoxItem Content="MIRA HQ"/>
                            <ComboBoxItem Content="Polus"/>
                        </ComboBox>

                        <TextBlock Text="Winner:" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="WinnerFilter" Margin="0,0,0,10" SelectionChanged="Filter_Changed">
                            <ComboBoxItem Content="All Games" IsSelected="True"/>
                            <ComboBoxItem Content="Crewmate Wins"/>
                            <ComboBoxItem Content="Impostor Wins"/>
                        </ComboBox>

                        <TextBlock Text="Player Count:" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="PlayerCountFilter" Margin="0,0,0,10" SelectionChanged="Filter_Changed">
                            <ComboBoxItem Content="All" IsSelected="True"/>
                            <ComboBoxItem Content="1-4 Players"/>
                            <ComboBoxItem Content="5-8 Players"/>
                            <ComboBoxItem Content="9+ Players"/>
                        </ComboBox>

                        <Button Content="Clear Filters" 
                                Style="{StaticResource ModernButton}"
                                Click="ClearFilters_Click" 
                                Margin="0,0,0,20"
                                HorizontalAlignment="Stretch"/>

                        <Separator Background="{StaticResource BorderColor}" Margin="0,0,0,20"/>

                        <!-- Search Section -->
                        <TextBlock Text="PLAYER SEARCH" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                        <TextBox x:Name="SearchBox" 
                                 Margin="0,0,0,8"
                                 Text="Enter player name..."
                                 GotFocus="SearchBox_GotFocus"
                                 LostFocus="SearchBox_LostFocus"/>

                        <Button Content="ðŸ” Search Player" 
                                Style="{StaticResource ModernButton}"
                                Click="SearchPlayer_Click" 
                                Margin="0,0,0,20"
                                HorizontalAlignment="Stretch"/>

                        <Separator Background="{StaticResource BorderColor}" Margin="0,0,0,20"/>

                        <!-- Statistics -->
                        <TextBlock Text="OVERALL STATS" FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>

                        <Border Background="{StaticResource BgTertiary}" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock x:Name="TotalGamesText" Text="Total Games: 0" 
                                           FontSize="13" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="CrewWinRateText" Text="Crew Win Rate: 0%" 
                                           FontSize="13" Foreground="{StaticResource AccentGreen}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="ImpWinRateText" Text="Imp Win Rate: 0%" 
                                           FontSize="13" Foreground="{StaticResource AccentRed}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="AvgDurationText" Text="Avg Duration: 0:00" 
                                           FontSize="13" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </Border>

                        <Button Content="ðŸ”„ Refresh Data" 
                                Style="{StaticResource ModernButton}"
                                Click="RefreshButton_Click" 
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT CONTENT AREA -->
            <Border Grid.Column="2" Style="{StaticResource Panel}">
                <Grid>
                    <!-- Game Details View -->
                    <ScrollViewer x:Name="DetailsView" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="MATCH DETAILS" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBlue}"
                                           VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="ðŸ“‹ Copy Match ID" Style="{StaticResource SmallButton}" Click="CopyMatchID_Click" Margin="0,0,5,0"/>
                                    <Button Content="ðŸ—‘ï¸ Delete Game" Style="{StaticResource SmallButton}" Click="DeleteGame_Click" Margin="0,0,5,0"/>
                                    <Button Content="â† Back" Style="{StaticResource SmallButton}" Click="ViewAllGames_Click"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock x:Name="DetailsText" 
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimary}"
                                       LineHeight="22"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- All Games Grid View -->
                    <ScrollViewer x:Name="GamesGridView" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="ALL GAMES" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBlue}"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="GameCountText" 
                                           Text="0 games" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <ItemsControl x:Name="GamesGrid">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource GameCard}" 
                                                Width="180"
                                                Margin="0,0,10,10"
                                                MouseLeftButtonDown="GameCard_Click"
                                                MouseEnter="GameCard_MouseEnter"
                                                MouseLeave="GameCard_MouseLeave"
                                                Tag="{Binding}">
                                            <StackPanel>
                                                <TextBlock FontSize="12" FontWeight="Bold" 
                                                           Foreground="{StaticResource AccentYellow}" 
                                                           Margin="0,0,0,6">
                                                    <Run Text="ðŸ“… "/>
                                                    <Run Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, HH:mm}'}"/>
                                                </TextBlock>

                                                <TextBlock FontSize="11" Foreground="{StaticResource TextPrimary}" 
                                                           Margin="0,0,0,4">
                                                    <Run Text="ðŸ—ºï¸ "/>
                                                    <Run Text="{Binding Metadata.MapName}"/>
                                                </TextBlock>

                                                <TextBlock FontSize="11" Foreground="{StaticResource TextSecondary}" 
                                                           Margin="0,0,0,4">
                                                    <Run Text="â±ï¸ "/>
                                                    <Run Text="{Binding Metadata.GameDuration, StringFormat='{}{0:mm}:{0:ss}'}"/>
                                                    <Run Text=" â€¢ "/>
                                                    <Run Text="ðŸ‘¥ "/>
                                                    <Run Text="{Binding Metadata.PlayerCount}"/>
                                                </TextBlock>

                                                <TextBlock FontSize="10" Foreground="{StaticResource TextSecondary}" 
                                                           Margin="0,0,0,6">
                                                    <Run Text="ðŸ’€ "/>
                                                    <Run Text="{Binding Statistics.TotalKills}"/>
                                                    <Run Text=" kills â€¢ "/>
                                                    <Run Text="ðŸ“‹ "/>
                                                    <Run Text="{Binding Metadata.TotalMeetings}"/>
                                                    <Run Text=" meetings"/>
                                                </TextBlock>

                                                <Border Background="{StaticResource BgTertiary}" 
                                                        CornerRadius="3" 
                                                        Padding="6,4" 
                                                        Margin="0,0,0,0">
                                                    <TextBlock FontSize="11" 
                                                               FontWeight="Bold" 
                                                               Foreground="{StaticResource AccentGreen}" 
                                                               HorizontalAlignment="Center">
                                                        <Run Text="ðŸ† "/>
                                                        <Run Text="{Binding Winner.WinningTeam}"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Player Stats View -->
                    <ScrollViewer x:Name="PlayerStatsView" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="PLAYER STATISTICS" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource AccentPurple}"
                                           VerticalAlignment="Center"/>
                                <Button Content="â† Back" Style="{StaticResource SmallButton}" Click="ViewAllGames_Click" HorizontalAlignment="Right"/>
                            </Grid>

                            <TextBlock x:Name="PlayerStatsText" 
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimary}"
                                       LineHeight="22"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Leaderboard View -->
                    <ScrollViewer x:Name="LeaderboardView" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="LEADERBOARD" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource AccentGreen}"
                                           VerticalAlignment="Center"/>
                                <Button Content="â† Back" Style="{StaticResource SmallButton}" Click="ViewAllGames_Click" HorizontalAlignment="Right"/>
                            </Grid>

                            <TextBlock x:Name="LeaderboardText" 
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimary}"
                                       LineHeight="22"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
            <Grid Margin="20,0">
                <TextBlock x:Name="StatusText" 
                           Text="Ready" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondary}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="VersionText" 
                           Text="v1.0.0" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondary}" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
